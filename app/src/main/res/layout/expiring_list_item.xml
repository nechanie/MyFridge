<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="3dp"
    android:backgroundTint="@color/cardview_dark_background"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toLeftOf="@+id/middleLL"
            card_view:layout_constraintHorizontal_chainStyle="spread"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/leftLL">

            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/expiring_item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            card_view:layout_constraintLeft_toRightOf="@+id/leftLL"
            card_view:layout_constraintRight_toRightOf="@+id/rightLL"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_weight="2"
            android:id="@+id/middleLL">
            <TextView
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:id="@+id/expiring_item_name"/>
        </LinearLayout>
        <LinearLayout
            card_view:layout_constraintLeft_toRightOf="@+id/middleLL"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_weight="1.25"
            android:id="@+id/rightLL">
            <TextView
                android:id="@+id/expiring_item_expr"
                android:textSize="20sp"
                android:textColor="@color/light_blue_200"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>