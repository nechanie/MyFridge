<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/detailed_constraint_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/detailed_recipe_image"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_servings_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_servings_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/detailed_recipe_servings_image"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_image" />

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_readyInMinutes_image"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/detailed_recipe_servings_text"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_readyInMinutes_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/detailed_recipe_readyInMinutes_image"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_image" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_likes_image"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/detailed_recipe_readyInMinutes_text"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_likes_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/detailed_recipe_likes_image"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/detailed_recipe_main_text"
            android:textSize="24sp"
            android:layout_margin="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_servings_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_summary_text"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="10dp"
            android:textSize="20sp"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_main_text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailed_recipe_instructions_button"
            android:text="@string/detailed_instructions_button"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailed_recipe_summary_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>