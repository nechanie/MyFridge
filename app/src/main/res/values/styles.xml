<resources>

    <style name="Widget.MyFridge.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.MyFridge.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="backgroundMenuButtonAddToList">
        <item name="strokeWidth">1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeColor">#F3FAFC</item>
        <item name="backgroundTint">#EBB513</item>
        <item name="shapeAppearance">@null</item>
        <item name="iconGravity">end</item>
    </style>
    <style name="backgroundMenuButtonDeleteFromList">
        <item name="strokeWidth">1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeColor">#F3FAFC</item>
        <item name="backgroundTint">#B71A34</item>
        <item name="shapeAppearance">@null</item>
        <item name="iconGravity">end</item>
    </style>
</resources>